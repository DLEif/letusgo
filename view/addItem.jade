extends ./viewModule/navBar.jade
block title
  title 添加商品
  script(src="js/require.js" data-main="js/addItem")
block management
  a.ui.link.item.active(href="shopManagement") 商城管理
block content
    .ui.negative.message#emptyError(style='display: none')
      i.close.icon
      .header 请输入完整信息
    .ui.negative.message#inputError(style='display: none')
      i.close.icon
      .header 请按照正确格式输入
    .ui.form.segment
      .ui.grid
        .eight.wide.column
          label 商品名称
            input#itemName(placeholder='商品名称', type='text', style="border: grey 1px solid")
        .eight.wide.column
        .eight.wide.column
          label 商品单位
            input#itemUnit(placeholder='商品单位', type='text', style="border: grey 1px solid")
        .eight.wide.column
        .eight.wide.column
          label 商品单价
            input#itemPrice(placeholder='商品单价', type='text', style="border: grey 1px solid")
      a.ui.blue.submit.button#cancel(href="/shopManagement") 关闭
      a.ui.green.submit.button#save 保存

