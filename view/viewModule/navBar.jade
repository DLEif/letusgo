doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width")
    link(rel="stylesheet" type="text/css" href="semantic-ui/dist/semantic.css")
    script(src="jquery/dist/jquery.js")
    script(src="semantic-ui/dist/semantic.js")
    block title
      title 首页
  body
      header
        h5#logo  欢迎光临来此购网上购物商城
      div.container
      div.ui.inverted.masthead.segment
        div.row
          div.sixteen.wide.column
            div.ui.inverted.teal.menu
              div.left.menu
                a.ui.item LetUsGo
                block home
                  a#homeLink.ui.link.item(href="/") 主页
                  i.home.icon
                block shop
                  a.ui.link.item(href="shop") 商城
                block management
                  a.ui.link.item(href="shopManagement") 商城管理
              div.right.menu
                block cart
                  a.ui.link.item(href="cart") 购物车
                    i.cart.in.icon
        block content
